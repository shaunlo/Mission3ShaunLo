<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <!--A webpage title -->
    <title>@ViewData["Title"]</title>

    <!--An icon -->
    <link rel="icon" href="img/pig_icon.png" type="image/x-icon">

    <!--Include at least one change to the styling using your own CSS file.  -->
    <link href="css/default.css" rel="stylesheet" />

    <!--Style the site using Bootstrap -->
    <link href="lib/bootstrap/bootstrap-5.1.3-dist/css/bootstrap.min.css" rel="stylesheet" />

</head>
<body>

    <nav>
        <a asp-controller="Blah" asp-action="Index">Home</a>
        <a asp-controller="Blah" asp-action="GradeCalculator">Grade Calculator</a>
    </nav>

    <div>
        @RenderBody()
    </div>

    <footer>Welcome to my page!</footer>

    <script src="~/lib/bootstrap/bootstrap-5.1.3-dist/js/bootstrap.min.js"></script>
    <script src="~/lib/jquery/jquery-3.6.0.min.js"></script>
    <script src="~/js/JavaScript.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)

</body>

</html>
